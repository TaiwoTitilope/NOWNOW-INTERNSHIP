SELECT MAINDATE AS DAY, COUNT(*) VOLUME, SUM(VALUE) VALUE
FROM (
SELECT TO_CHAR(INSERTTIME, 'DD-MON-YYYY') MAINDATE,
PROCESS_AMOUNT AS VALUE
FROM MFSCORE.POS_TXN_DETAIL WHERE STATUSCODE = 0 AND Reversal = 0
)

GROUP BY DAY

ORDER BY TO_DATE(MAINDATE, 'DD MON YYYY') DESC

LIMIT 15

